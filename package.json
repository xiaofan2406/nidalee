{
  "name": "nidalee",
  "version": "0.0.16",
  "author": "Xiaofan Wu (https://github.com/xiaofan2406)",
  "description": "React UI framework",
  "keywords": [
    "nidalee",
    "react",
    "UI"
  ],
  "repository": "xiaofan2406/nidalee",
  "bugs": {
    "url": "https://github.com/xiaofan2406/nidalee/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint:tslint": "tslint 'src/**/*.{ts,tsx}' -c tslint.json",
    "lint:eslint": "eslint '**/*.js' --ignore-path .gitignore",
    "lint:prettier": "prettier-check '**/*.{js,json,ts,tsx,md,mdx}' --ignore-path .gitignore",
    "lint": "yarn lint:tslint && yarn lint:eslint && yarn lint:prettier",
    "format": "prettier '**/*.{js,json,ts,tsx,md,mdx}' --write --ignore-path .gitignore",
    "test": "NODE_ENV=test jest --watch --updateSnapshot",
    "coverage": "NODE_ENV=test jest --coverage",
    "prebuild": "yarn type-check && yarn lint && rm -rf dist",
    "build:cjs": "NODE_ENV=production MODULE=cjs babel src --out-dir dist/cjs --extensions '.ts,.tsx'",
    "build:esm": "NODE_ENV=production babel src --out-dir dist/esm --extensions '.ts,.tsx'",
    "build": "yarn build:cjs && yarn build:esm",
    "docs:dev": "docz dev",
    "docs:build": "docz build",
    "docs:release": "surge -p ./dist/docs -d nidalee.surge.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,ts,tsx,md,mdx}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/docs/**/*"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": [
    "Chrome >= 60",
    "Safari >= 10.1",
    "iOS >= 10.3",
    "Firefox >= 54",
    "Edge >= 15"
  ],
  "peerDependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "dependencies": {
    "color": "^3.1.0",
    "emotion": "^9.2.12",
    "react-emotion": "^9.2.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/color": "^3.0.0",
    "@types/react": "^16.7.20",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "docz": "0.13.7",
    "docz-theme-default": "^0.13.7",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.0",
    "jest-emotion": "^9.2.11",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "prettier-check": "^2.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.5.2",
    "react-testing-library": "^5.2.0",
    "surge": "^0.20.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  }
}
